// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Item {
  id                 String     @id
  name               String
  price              Int
  slots              Int
  pricePerSlot       Int
  avg24hPrice        Int
  image              String
  category           String
  subcategory        String
  wiki               String
  sellToTrader       Int
  profitFleaVsTrader Int
  bannedFromFlea     Boolean @default(false)
}
